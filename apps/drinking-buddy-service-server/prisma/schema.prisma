datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Survey {
  createdAt         DateTime                     @default(now())
  drinkerType       EnumSurveyDrinkerType?
  drinkingFrequency EnumSurveyDrinkingFrequency?
  favoriteDrink     String?
  id                String                       @id @default(cuid())
  updatedAt         DateTime                     @updatedAt
  user              User?                        @relation(fields: [userId], references: [id])
  userId            String?
}

model Match {
  compatibilityScore Float?
  createdAt          DateTime @default(now())
  id                 String   @id @default(cuid())
  updatedAt          DateTime @updatedAt
  user1              String?
  user2              String?
}

model User {
  age          Int?
  ageField     Int?
  createdAt    DateTime              @default(now())
  email        String?               @unique
  firstName    String?
  gender       EnumUserGender?
  genderOption EnumUserGenderOption?
  id           String                @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  surveys      Survey[]
  updatedAt    DateTime              @updatedAt
  username     String                @unique
  userName     String?
}

enum EnumSurveyDrinkerType {
  Option1
}

enum EnumSurveyDrinkingFrequency {
  Option1
}

enum EnumUserGender {
  Option1
}

enum EnumUserGenderOption {
  Option1
}
